
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler", 
    "resolveJsonModule": true,
    "isolatedModules": true 
  },
  "include": [
    "index.tsx",
    "types.ts",
    "constants.ts",
    "services/**/*.ts",
    "components/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
